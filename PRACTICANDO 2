void pedirdatos();
void mult(float x,float y); //uso void por que no voy a retornar ningun dato,solo voy a desplegar o mostrar el dato//
float n1,n2;
 void pedirdatos(){
     cout<<"DIGITE EL PRIMER NUMERO: "<<endl;
     cin>>n1;
      cout<<"DIGITE EL SEGUNDO NUMERO: "<<endl;
     cin>>n2;
 }
 void mult(float x,float y){
     float multiplicacion=x*y;
     cout<<"LA MULTIPLICACION ES: "<<multiplicacion<<endl;
}
int main(){
    pedirdatos();       //tengo que pensat el orden que voy a pedir la funcion,no puedo primero llamar
