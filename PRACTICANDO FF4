void saludo(){
    cout<<"BIENVENIDO"<<endl;
}
void resta(int a, int b){
    int resta=0;
    resta=a-b;
cout<<"EL RESULTADO DE LA RESTA ES: "<<resta<<endl;
}
void division(float a, float b){
    float division=0;
    division=a/b;
cout<<"EL RESULTADO DE LA DIVISION ES: "<<division<<endl;
}
void multiplicacion(float a, float b){
    float multiplicacion=0;
    multiplicacion=a*b;
cout<<"EL RESULRADO DE LA MULTIPLICACION ES: "<<multiplicacion<<endl;
}
int main(){
    float a,b,mult,divi,rest;
    int opc;
    void saludo();
    cout<<"INGRESE EL VALOR DE A: "<<endl;
        cin>>a;
        cout<<"INGRESE EL VALOR DE B: "<<endl;
        cin>>b;
        do{
        cout<<"1.RESTA"<<endl;
        cout<<"2.MULTIPLICACION"<<endl;
        cout<<"3.DIVISION"<<endl;
        cout<<"0.SALIR"<<endl;
        cout<<"DIGITE LO QUE DESEE REALIZAR: "<<endl;
        cin>>opc;
        switch(opc){
            
    case 1: resta(a,b);
    
    break;
    case 2: multiplicacion(a,b);

    break;
    case 3: division(a,b);
    break;
    case 0: cout<<"SALIENDO DEL PROGRAMA"<<endl;
    break;
    default: cout<<"OPCION NO DISPONIBLE, INGRESE OTRO NUMERO: "<<endl;
    break;
        }
    
        }while(opc!=0);
       
    
    return 0;
}
